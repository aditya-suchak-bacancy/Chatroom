<h2 class="ui center aligned icon header">
  <i class="circular orange comment icon"></i>
  Chat 
</h2>
    <div class = "ui fluid raised card chatbox">
        <div class = "content" id="messages">
          <div class="ui feed" id="message-container">
            <%= render @messages %>
          </div>
        </div>
        <div class = "extra content">
          <%= form_for @message,url: message_path,remote: true do |f| %>
            <div class="field">
              <div class="ui fluid icon input">
                <%= f.text_field :text %>
                <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  

